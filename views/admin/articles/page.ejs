<%- include('../../partials/header.ejs') %>
  <%- include('../../partials/navbar.ejs') %>

    <div class="container"><br>
      <% result.articles.rows.forEach((articles)=>{ %>
        <div class="card">
          <div class="card-header">
            <h1>
              <%= articles.title %>
            </h1>
          </div>
          <div class="card-body">
            <a href="/<%= articles.slug %>" class="btn btn-info">Ler Artigo</a>
          </div>
        </div><br>
        <%}) %>

          <div class="row">
            <div class="col col-12">
              <% if(result.page> 2){ %>
                <a style="float: left;" href="/articles/page/<%= result.page -1 %>">
                  <<< prev </a>
                    <%} else if(result.page==2){%>
                      <a style="float: left" href="/">
                        <<< prev </a>
                          <%}%>

            </div>
          </div>


          <div class="row">
            <div class="col col-12">
              <% if(result.next){ %>
                <a style="float: right;" href="/articles/page/<%= result.page + 1 %>"> next >>> </a>
                <%}%>
            </div>
          </div>

    </div>


    <%- include('../../partials/footer.ejs') %>